        <createTable tableName="demande_changement">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="jhi_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="contenu" type="varchar(3000)">
                <constraints nullable="false" />
            </column>

            <column name="reponse" type="varchar(3000)">
                <constraints nullable="true" />
            </column>

            <column name="etat" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="lien" type="varchar(100)">
                <constraints nullable="true" />
            </column>

            <column name="code_question" type="varchar(100)">
                <constraints nullable="true" />
            </column>

            <column name="medecin_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="arc_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="demande_changement" columnName="jhi_date" columnDataType="datetime"/>
        
    </changeSet>
